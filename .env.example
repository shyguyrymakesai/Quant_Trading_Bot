# Environment selection
ENV=paper
DRY_RUN=1
TZ=America/Indiana/Indianapolis

# Trading universe
SYMBOLS=BTC/USD
TIMEFRAME=30m
QUOTE_CURRENCY=USD

# Data + sizing params
DATA_PROVIDER=coinbase
MACD_FAST=8
MACD_SLOW=24
MACD_SIGNAL=9
ADX_THRESHOLD=20
VOL_LOOKBACK=20
TARGET_DAILY_VOL=0.02
STARTING_EQUITY=100000
MAX_LEVERAGE=1.0
PROCESSING_LAG_SECONDS=20
MAX_API_ERRORS=5
STATE_FILE=state/bot_state.json
LOG_LEVEL=INFO
LOG_DIR=logs

# Per-symbol overrides live in config/config.yaml under strategy_overrides.
# This project now uses a single YAML config file; legacy params.yaml/JSON were removed.

# Paper API credentials
PAPER_API_KEY=your_paper_key
PAPER_API_SECRET=your_paper_secret
PAPER_API_PASSPHRASE=
PAPER_BASE_URL=https://paper-api.example.com

# Live API credentials
LIVE_API_KEY=
LIVE_API_SECRET=
LIVE_API_PASSPHRASE=
LIVE_BASE_URL=
